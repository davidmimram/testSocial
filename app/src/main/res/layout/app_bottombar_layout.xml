<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_app_bar"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="560dp"
    android:background="#FDFDFD"
    android:paddingBottom="0dp"
    android:src="@drawable/bitmap_copy">


    <Button
        android:id="@+id/icon_home"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp"
        android:background="@drawable/home"
        android:onClick="home"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/home" />

    <Button
        android:id="@+id/icon_search"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/icon_home"
        android:layout_alignTop="@+id/icon_home"
        android:layout_marginStart="49dp"
        android:layout_toEndOf="@+id/icon_home"
        android:background="@drawable/search"
        android:onClick="search"
        app:srcCompat="@drawable/search" />

    <Button
        android:id="@+id/icon_center"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="176dp"
        android:background="@drawable/retnagle"
        android:onClick="center"
        app:srcCompat="@drawable/retnagle" />

    <Button
        android:id="@+id/icon_like"
        android:layout_width="21dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/icon_center"
        android:layout_alignTop="@+id/icon_center"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/icon_center"
        android:background="@drawable/activity"
        android:onClick="like"
        app:srcCompat="@drawable/activity" />

    <Button
        android:id="@+id/icon_profile"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/icon_like"
        android:background="@drawable/profile"
        android:onClick="profile"
        app:srcCompat="@drawable/profile" />

    <Button
        android:id="@+id/imageView2"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignEnd="@+id/icon_like"
        android:layout_below="@+id/icon_like"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/orangeovel"
        android:onClick="like"
        app:srcCompat="@drawable/orangeovel" />
</RelativeLayout>